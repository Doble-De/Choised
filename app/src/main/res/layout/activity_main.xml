<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dalealdado.choised.MainActivity"
    android:background="@drawable/fondoestrellas"
    >


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="243dp"
        android:layout_height="213dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/transparente" />

    <Button
        android:id="@+id/bdados"
        android:layout_width="281dp"
        android:layout_height="78dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/ui_boton"
        android:fontFamily="casual"
        android:text="DADOS"
        android:textColor="@color/colorFondoDados"
        android:textSize="27sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/bpersonajes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/baventura" />

    <Button
        android:id="@+id/bescenarios"
        android:layout_width="281dp"
        android:layout_height="78dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/ui_boton"
        android:fontFamily="casual"
        android:text="Escenarios"
        android:textColor="@color/colorFondoDados"
        android:textSize="27sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bpersonajes" />

    <Button
        android:id="@+id/bpersonajes"
        android:layout_width="281dp"
        android:layout_height="78dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/ui_boton"
        android:fontFamily="casual"
        android:text="Personajes"
        android:textColor="@color/colorFondoDados"
        android:textSize="27sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/bescenarios"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bdados" />

    <Button
        android:id="@+id/baventura"
        android:layout_width="281dp"
        android:layout_height="78dp"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/ui_boton"
        android:fontFamily="casual"
        android:text="Aventura"
        android:textAlignment="center"
        android:textColor="@color/colorFondoDados"
        android:textSize="27sp"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintBottom_toTopOf="@+id/bdados"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/info"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/information"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>